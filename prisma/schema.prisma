datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   
  createdRoom    Room?    @relation(fields: [createdRoomId], references: [id])
  createdRoomId  Int?  
}

model Room {
  id             Int      @id @default(autoincrement())
  slug           String   @unique

  users   User[]
}

